<%= javascript_include_tag "jquery.ad-gallery" %>
<%= javascript_include_tag "gallery-manager" %>
<%= stylesheet_link_tag 'jquery.ad-gallery.css' %>
<%= stylesheet_link_tag 'gallery.css' %>

<div id="project_list" class="grid_3">
<ul id="projects" >
    <% @projects.each do |project| %>
      <li>
        <%= link_to project.title, project_path(project) %>
      </li>
    <% end %>
  </ul>

  
</div>

<div id="gallery" class="ad-gallery grid_13">
  <div class="ad-image-wrapper">
  </div>
  <div class="ad-controls">
  </div>
  <div class="ad-nav">
    <div class="ad-thumbs">
      <ul class="ad-thumb-list">
        <% @projects.each_with_index do |project, index| %>
          <li>
            <%= link_to image_tag(project.main_image.url, :class => "thumb image#{index}"), project.main_image.url 
                %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div id="descriptions"></div>
