<%= javascript_include_tag "jquery.timers-1.2" %>
<%= javascript_include_tag "jquery.easing.1.3" %>
<%= javascript_include_tag "jquery.isotope" %>
<%= javascript_include_tag "jquery.galleryview-3.0-dev" %>
<%= javascript_include_tag "gallery-manager" %>
<%= stylesheet_link_tag 'jquery.galleryview-3.0-dev' %>
<%= stylesheet_link_tag 'gallery.css' %>

<div id="project_list" class="grid_3">
  <div class="project_category_container publi">
    <h3 data-category="publicidad" class="active">Publicidad y web</h3>
    <ul id="projects_publicidad" >
      <% @projects.by_category("publicidad").each do |project| %>
        <li data-project-id="<%=project.id%>" class="project_link publi">
          <%= link_to project.title, project_path(project) %>
        </li>
      <% end %>
    </ul>

  </div>
  <div class="project_category_container editorial">

    <h3 data-category="editorial">Editorial</h3>
    <ul id="projects_publicaciones" >
      <% @projects.by_category("editorial").each do |project| %>
        <li data-project-id="<%=project.id%>" class="project_link editorial">
          <%= link_to project.title, project_path(project) %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="project_category_container corporativo">

    <h3 data-category="corporativo">Dise√±o corporativo</h3>
    <ul id="projects_corporativo" >
      <% @projects.by_category("corporativo").each do |project| %>
        <li data-project-id="<%=project.id%>" class="project_link corporativo">
          <%= link_to project.title, project_path(project) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<div id="gallery_container" class=" grid_13">
  <div id="thumbs_mosaic_container">
  </div>
  <div class="gallery_wrapper publi">
    <ul id="gallery_publicidad" >
      <% @projects.by_category("publicidad").each do |project| %>
        <li>
          <%= image_tag image_path(project.main_image.url), 
            "data-project-id"=> project.id, 
            :title => project.title, 
            :longdesc => project.description,
            :class => project.category %>
        </li>
      <% end %>
    </ul>

  </div>
  
  <div class="gallery_wrapper editorial">
    <ul id="gallery_editorial" >
      <% @projects.by_category("editorial").each do |project| %>
        <li>
          <%= image_tag image_path(project.main_image.url), 
            "data-project-id"=> project.id, 
            :title => project.title, 
            :longdesc => project.description,
            :class => project.category %>
        </li>
      <% end %>
    </ul>

  </div>
  
  <div class="gallery_wrapper corporativo">
    <ul id="gallery_corporativo" >
      <% @projects.by_category("corporativo").each do |project| %>
        <li>
          <%= image_tag image_path(project.main_image.url), 
            "data-project-id"=> project.id, 
            :title => project.title, 
            :longdesc => project.description,
            :class => project.category %>
        </li>
      <% end %>
    </ul>

  </div>

</div>