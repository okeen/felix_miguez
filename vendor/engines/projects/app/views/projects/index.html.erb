<%= javascript_include_tag "jquery.timers-1.2" %>
<%= javascript_include_tag "jquery.easing.1.3" %>
<%= javascript_include_tag "jquery.galleryview-3.0-dev" %>
<%= javascript_include_tag "gallery-manager" %>
<%= stylesheet_link_tag 'jquery.galleryview-3.0-dev' %>
<%= stylesheet_link_tag 'gallery.css' %>

<div id="project_list" class="grid_3">
  <ul id="projects_publicidad" >
    <% @projects.by_category("publicidad").each do |project| %>
      <li data-project-id="<%=project.id%>" class="project_link publi">
        <%= link_to project.title, project_path(project) %>
      </li>
    <% end %>
  </ul>

  <ul id="projects_publicaciones" >
    <% @projects.by_category("publicaciones").each do |project| %>
      <li data-project-id="<%=project.id%>" class="project_link publicaciones">
        <%= link_to project.title, project_path(project) %>
      </li>
    <% end %>
  </ul>

  <ul id="projects_corporativo" >
    <% @projects.by_category("corporativo").each do |project| %>
      <li data-project-id="<%=project.id%>" class="project_link corporativo">
        <%= link_to project.title, project_path(project) %>
      </li>
    <% end %>
  </ul>

  
  
</div>

<div id="gallery_container" class=" grid_12">
  <ul id="gallery" >
    <% @projects.each do |project| %>
      <li>
        <%= image_tag image_path(project.main_image.url), 
              :p_id=> project.id, 
              :title => project.title, 
              :longdesc => project.description %>
      </li>
    <% end %>
  </ul>

  