<% content_for :body_content_left do %>
  <div class='inquiries grid_8'>
    <%=raw @page[Page.default_parts.first.to_sym] %>

    <%= form_for @inquiry do |f| %>
      <%= render :partial => "/shared/admin/error_messages",
                 :locals => {
                   :object => @inquiry,
                   :include_object_name => true
                 } %>
      <div class='field'>
        <%= f.required_label :name, "Nombre" %>
        <%= f.text_field :name %>
      </div>
      <div class='field'>
        <%= f.required_label :email, "Email" %>
        <%= f.text_field :email %>
      </div>
      <div class='field'>
        <%= f.label :phone , "Teléfono"%>
        <%= f.text_field :phone %>
      </div>
      <div class='field message_field'>
        <%= f.required_label :message, "Pregunta"  %>
        <%= f.text_area :message, :rows => 8 %>
      </div>
      <div class='actions'>
        <%= f.submit "Enviar" %>
        <%= link_to t('.privacy_policy'), "/pages/privacy-policy", :id => "privacy_link" if RefinerySetting.find_or_set(:show_contact_privacy_link, false) %>
      </div>
    <% end %>
  </div>
<div class="grid_8">
  <p id="contact_message">Escríbanos y nos pondremos en contacto en menos de 24h</p>
