<% content_for :body_content_left do %>
  <div id="contact" class='inquiries grid_7'>
    <%=raw @page[Page.default_parts.first.to_sym] %>

    <%= form_for @inquiry do |f| %>
      <%= render :partial => "/shared/admin/error_messages",
                 :locals => {
                   :object => @inquiry,
                   :include_object_name => true
                 } %>
      <div class='field'>
        <%= f.required_label :name, "Nombre" %>
        <%= f.text_field :name %>
      </div>
      <div class='field'>
        <%= f.required_label :email, "Email" %>
        <%= f.text_field :email %>
      </div>
      <div class='field'>
        <%= f.label :phone , "Teléfono"%>
        <%= f.text_field :phone %>
      </div>
      <div class='field message_field'>
        <%= f.required_label :message, "Mensaje"  %>
        <%= f.text_area :message, :rows => 8 %>
      </div>
    
      <div class='actions'>
        <%= f.submit "Enviar" %>
      </div>
    
    <% end %>
    <div id="privacy">
      <p>Tu mensaje quedará sujeto a las <%= link_to "políticas de privacidad ", "/pages/privacy-policy", :id => "privacy_link" %> que dicta la Ley vigente</p>
    </div>
    
  </div>
<div id="contact_image_container">
  <%= image_tag "/system/images/BAhbBlsHOgZmSSIvMjAxMi8wMS8yNC8xNC8yNy80Ni80MzUvSW1hZ2VuQ29udGFjdG8ucG5nBjoGRVQ/ImagenContacto.png" %>
</div>

<% end %>
<%= render :partial => "/shared/content_page" %>
