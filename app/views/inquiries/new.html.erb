<% content_for :body_content_left do %>
  <div id="contact" class='inquiries grid_8'>
    <%=raw @page[Page.default_parts.first.to_sym] %>

    <%= form_for @inquiry do |f| %>
      <%= render :partial => "/shared/admin/error_messages",
                 :locals => {
                   :object => @inquiry,
                   :include_object_name => true
                 } %>
      <div class='field'>
        <%= f.required_label :name, "Nombre" %>
        <%= f.text_field :name %>
      </div>
      <div class='field'>
        <%= f.required_label :email, "Email" %>
        <%= f.text_field :email %>
      </div>
      <div class='field'>
        <%= f.label :phone , "Teléfono"%>
        <%= f.text_field :phone %>
      </div>
      <div class='field message_field'>
        <%= f.required_label :message, "Mensaje"  %>
        <%= f.text_area :message, :rows => 8 %>
      </div>
    
      <div class='actions'>
        <%= f.submit "Enviar" %>
      </div>
    
    <% end %>
    <div id="privacy">
      <p>Tu mensaje quedará sujeto a las <%= link_to "políticas de privacidad ", "/pages/privacy-policy", :id => "privacy_link" %> que dicta la Ley vigente</p>
    </div>
    
  </div>
<div class="grid_8">
  <p id="contact_message">
</div>

<% end %>
<%= render :partial => "/shared/content_page" %>
